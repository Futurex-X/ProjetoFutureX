    private void jButton16ActionPerformed(java.awt.event.ActionEvent evt) {                                          
    valor2 = Double.parseDouble(txtResult.getText());

    valor2 = Double.parseDouble(txtResult.getText());

double resultado = 0;

switch (operacao) {
    case "soma" -> resultado = valor1 + valor2;
    case "subtraÃ§Ã£o" -> resultado = valor1 - valor2;
    case "multiplicaÃ§Ã£o" -> resultado = valor1 * valor2;
    case "divisÃ£o" -> resultado = valor1 / valor2;
}

    if (resultado == (int) resultado) {
    txtResult.setText(String.valueOf((int) resultado)); // sem .0
}   else {
    txtResult.setText(String.valueOf(resultado)); // com decimal
}


    }                                         

